<h2>New Tutorial</h2>
<%= form_for [:admin, @tutorial] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "block col-4 field" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "block col-4 field"  %>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, class: "block col-4 field"  %>

  <div data-controller="tutorials">
    <%= link_to "Import YouTube Playlist", "#", "data-action" => "click->tutorials#showVideoForm", class: "video-position-submit btn btn-outline", id: @tutorial.id %>
  </div>

  <div class="col col-4 p3 border" id="new-video-form">
    <h3>Import Youtube Playlist</h3>
    <%= f.label "Playlist ID", class: "block" %>
    <%= f.text_field :playlist_id, class: "field block"%>
  </div>

  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>

  <%= f.submit "Save", class: "mt2 btn btn-primary mb1 bg-teal"  %>
<% end %>
